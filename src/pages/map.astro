---
import BaseLayout from '../layouts/BaseLayout.astro';
import RegionChart from '../components/element/RegionChart.vue';
import mapPageData from '../data/mapPageData.json';

const mapPageSubtitle = mapPageData.pages.subtitles;
---

<BaseLayout footerGoPoll={false}>
  <div class="mapContainer md:flex md:flex-row-reverse md:p-12">
    <div class="detailedMapContainer flex h-[90vh] w-screen flex-col bg-primary-500 md:flex-col-reverse">
      <div class="map h-[90%] w-full bg-grayScale-pale"></div>
      <div class="filters h-[10%] w-full bg-secondary-blue filter"></div>
    </div>
    <div class="statisticContaier m-auto h-[90vh] w-[90vw] bg-secondary-green md:mr-5">
      <div class="candidateStatistic h-2/5 border-2 border-grayScale-black bg-pink-200">
        <div
          class="reagionTxtContainer flex h-1/5 items-center justify-center border-b-[1px] border-grayScale-black bg-green-100"
        >
          <p class="regionTxt text-xl font-semibold">{mapPageSubtitle[0].text}</p>
        </div>
        <div class="detailedCandidatestatisticContainer p-14">
          <div class="detailedCandidateStatistic">
            <img class="avatar" src="" alt="" />
            <p class="rate"></p>
            <p class="percentange"></p>
          </div>
        </div>
      </div>
      <div class="regionStatistic h-3/5 border-2 border-t-0 border-grayScale-black bg-purple-100 p-6">
        <div class="topCandidate border-[1px] border-grayScale-black">
          <p class="topCandidateTxt px-6 py-3 text-base">{mapPageSubtitle[1].text}</p>
          <div class="mostSupported"></div>
        </div>
        <div class="statisticTopic flex">
          <p class="region py-3 pr-16 text-base text-grayScale-salt">{mapPageSubtitle[2].text}</p>
          <p class="portion py-3 text-base text-grayScale-salt">{mapPageSubtitle[3].text}</p>
        </div>
        <div class="barChartContainer max-h-[65%] overflow-auto">
          <RegionChart />
          <RegionChart />
          <RegionChart />
          <RegionChart />
          <RegionChart />
          <RegionChart />
          <RegionChart />
          <RegionChart />
          <RegionChart />
          <RegionChart />
          <RegionChart />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
